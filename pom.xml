        </dependency>
        <!--spring对shiro的支持-->
        <dependency>
            <groupId>org.apache.shiro</groupId>
            <artifactId>shiro-spring</artifactId>
            <version>1.2.3</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <!--mybatis生成插件-->
            <plugin>
                <groupId>org.mybatis.generator</groupId>
                <artifactId>mybatis-generator-maven-plugin</artifactId>
                <version>1.3.2</version>
                <configuration>
                    <verbose>true</verbose>
                    <overwrite>true</overwrite>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
        </plugins>

        <resources>
            <!-- 打包时将资源文件一起打包到jar包或者war包中 -->
            <!--环境隔离配置Start -->
            <!--<resource>-->
            <!--<targetPath>config</targetPath>-->
            <!--<directory>src/main/resources/</directory>-->
            <!--<excludes>-->
            <!--&lt;!&ndash;忽略（不需要）隔离的文件 &ndash;&gt;-->
            <!--<exclude>*.jsp</exclude>-->
            <!--<exclude>*.md</exclude>-->
            <!--</excludes>-->
            <!--</resource>-->
            <!--&lt;!&ndash;环境隔离配置End &ndash;&gt;-->
            <!--&lt;!&ndash;公共的配置 &ndash;&gt;-->
            <!--<resource>-->
            <!--<targetPath>config</targetPath>-->
            <!--<directory>src/main/resources/</directory>-->
            <!--</resource>-->
            <!--&lt;!&ndash; 因为，maven认为src/main/java只是java的源代码路径 所以， 如果没有此项配置
            则JAVA代码中的dao/sqlmap文件将不会被打包进项目    此外，**/为了保证各级子目录下的资源文件被打包 -->
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                    <include>**/*.tld</include>
                </includes>
                <filtering>false</filtering>
            </resource>

        </resources>

    </build>

</project>
