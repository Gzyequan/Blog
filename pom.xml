    </modules>
    <packaging>pom</packaging>

    <name>CommonWeb</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spring.version>4.3.5.RELEASE</spring.version>
        <mybatis.version>3.4.4</mybatis.version>
